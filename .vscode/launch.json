    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rust Debugger",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "expressions": "simple",
            "sourceLanguages": ["rust"],
            "terminal": "console",
            "env": {
                "RUST_BACKTRACE": "1",
            }
        }
    ]
}
